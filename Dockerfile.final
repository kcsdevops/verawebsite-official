# Dockerfile para VeraCare com bypass LocalTunnel
FROM node:18-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependências
RUN npm install --legacy-peer-deps

# Copiar código
COPY . .

# Build do projeto
RUN npm run build

# Expor porta 8080
EXPOSE 8080

# Usar servidor otimizado
CMD ["node", "server-final.js"]